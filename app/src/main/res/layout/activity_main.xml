<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/img_btn_internal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorInternalCamera"
        android:onClick="btnClickNextActivity"
        app:srcCompat="@drawable/and_cam" />
        <!--app:srcCompat="@drawable/and_cam"-->
    <!---->


    <ImageButton
        android:id="@+id/img_btn_external"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorExternalCamera"
        android:onClick="btnClickNextActivity"
        app:srcCompat="@drawable/ip_cam" />
       <!-- app:srcCompat="@drawable/ip_cam" -->
    <!---->

</LinearLayout>